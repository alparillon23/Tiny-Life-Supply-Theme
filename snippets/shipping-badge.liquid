{% endif %}
{% else %}
{% if shop.metafields.accentuate.country == 'US' %}
<img style="height:100%;width:100%;opacity:0.4;object-fit:cover;z-index:2" src="https://cdn.shopify.com/s/files/1/0036/6333/1373/files/canada-flag-round.png?v=1576138267">
