<style>
  .dark-ren-field
  {
    width: 33.3333%;
    height: 30%;
    padding: 0;
    margin: 0;
    float:left;
    background-color: #696969;
    
    
  }
  .light-ren-field
  {
    width: 33.3333%;
    height: 30%;
    padding: 0;
    margin: 0;
    float:left;
    background-color: #ccc;
    
    
  }
  .image-ren
  {
    padding-top: 10%;
    width:80%;
    height: 60%;
    
  }
  
  @media (max-width: 430px)
    {
  .dark-ren-field
  {
    width: 50%;
    height: 30%;
    padding: 0;
    margin: 0;
    float:left;
    background-color: #696969;
    
    
  }
  .light-ren-field
  {
    width: 50%;
    height: 30%;
    padding: 0;
    margin: 0;
    float:left;
    background-color: #ccc;
    
    
  }
  .image-ren
  {
    padding-top: 10%;
    width:80%;
    height: 60%;
    
  }
      
      
      
    }
  
  
  
</style>
{% assign alt_variable = 0 %}
<center><h1> Renegades </h1></center>
<div class="column full">
{% for article in blogs.renegades.articles %}
	{% if article.tags contains 'Renegade' %}
		<div class="{% if alt_variable == 0 %}light-{% else %}dark-{% endif %}ren-field">
          <center>
            <img src="{{ article.image.src  | img_url:'720x' }}" class="image-ren" >
            <p>&nbsp;</p>
            <a href="{{ article.url }}"><button>{{article.title}}</button></a>
              </center>
          	<p>&nbsp;</p>
		</div>
        {% if alt_variable == 0 %}
          {% assign alt_variable = 1 %}
         {% else %}
          {% assign alt_variable = 0 %}
         {% endif %}
          
	{% endif %}

{% endfor %}
</div>