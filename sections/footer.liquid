        {% endfor %}
      </div>
    </div>

  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "select",
        "id": "footer_complexity",
        "label": "Layout",
        "options": [
          {
            "value": "simple",
            "label": "Simple"
          },
          {
            "value": "columns",
            "label": "Columns"
          }
        ],
        "default": "simple"
      },
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "checkbox",
        "id": "show_footer_logo",
        "label": "Show logo",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "richtext",
        "id": "text_content",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Menus"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Primary menu",
        "default": "footer",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "link_list",
        "id": "footer_linklist2",
        "label": "Additional menu 1",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "link_list",
        "id": "footer_linklist3",
        "label": "Additional menu 2",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "header",
        "content": "Newsletter"
      },
      {
        "type": "checkbox",
        "id": "footer_display_newsletter",
        "label": "Show newsletter sign-up",
        "default": true
      },
      {
        "type": "richtext",
        "id": "newsletter_text",
        "label": "Content above input"
      }
    ]
  }
{% endschema %}
