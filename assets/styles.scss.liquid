    height: 20px;
    padding: 4px;
    margin: 0 5px 0 0;
    color: #666;
    background: #fff;
    border: 1px solid #ccc;
    vertical-align: top;

    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
  }
  input[type=submit] {
    display: inline-block;
    border: none;
    background: {{ settings.feature_col }};
    color: {{ settings.feature_over_col }};
    vertical-align: top;

    margin: 0;
    padding: 4px 14px;

    font-size: 90%;
    height: 30px;
    cursor: pointer;

    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
  }

  #shoplogo {
    margin: 0 auto;
  }

  .shopify-name { display: none; }

  .password-message {
    margin-bottom: 2em;
  }

  .password-signup {
    margin-bottom: 4em;
    input[type=email] {
      -moz-box-sizing: content-box;
      -webkit-box-sizing: content-box;
      box-sizing: content-box;
      font-size: 16px;
      line-height: 36px;
      height: 36px;
      padding: 4px 18px;
      margin-right: -1px;
      width: 250px;
      @include vendor-prefix(border-radius, 3px 0 0 3px);
    }
    input[type=submit] {
      -moz-box-sizing: content-box;
      -webkit-box-sizing: content-box;
      box-sizing: content-box;
      font-size: 16px;
      line-height: 36px;
      height: 36px;
      padding: 4px 18px;
      border: 1px solid {{ settings.feature_col }};
      @include vendor-prefix(border-radius, 0 3px 3px 0);
      &:hover {
        border-color: lighten({{ settings.feature_col }}, 10%);
      }
    }
  }

  @media only screen and (max-width: 420px) {
    .password-signup {
      input[type=email] {
        width: 90%;
      }
      input[type=email],
      input[type=submit] {
        margin: 0 0 10px;
        @include vendor-prefix(border-radius, 3px);
      }
    }
  }

  .password-social {
    ul {
      padding: 0;
    }
    li {
      display: inline-block;
      white-space: nowrap;
    }
    a {
      color: #fff;
      margin: 10px;
      display: inline-block;
      padding: 2px 12px 4px 4px;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;
      span {
        vertical-align: middle;
      }
    }
    a:hover {
      color: #fff;
      opacity: 0.9;
      &, span {
        text-decoration: none;
      }
    }

    a svg {
      display: inline-block;
      vertical-align: middle;
      margin: 0 4px;
      height: 15px;
      width: 15px;
      &, & g {
        fill: #fff;
      }
    }

    .password-social-item-facebook {
      background: #3b5998;
    }
    .password-social-item-twitter {
      background: #00aced;
    }
  }

  .password-footer-inner {
    padding-top: 150px;
    line-height: 2em;
    .powered-by, .shopify-logo svg {
      vertical-align: top;
    }
    .shopify-logo svg {
      margin: 0 0 0 5px;
      width: 80px;
      height: 23px;
    }
    .password-login-link {
      text-align: center;
    }
  }

  #password-login {
    width: 300px;
    padding: 1em 0;
    &,a,a:link,a:visited,a:hover {
      color: #333;
    }
    label {
      display: block;
      margin: 0 0 0.5em;
    }
    input[type=password] {
      width: 150px;
    }
    .password-owner {
      margin-top: 2em;
    }
  }
}


