/* Slider Arrows */

.slick-prev,
.slick-next {
  position: absolute;
  z-index: 1;
  display: block;
  height: $slick-prevnext-font-size;
  width: $slick-prevnext-font-size;
  line-height: 0px;
  font-size: 0px;
  cursor: pointer;
  background: transparent;
  color: transparent;
  top: 50%;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  transform: translate(0, -50%);
  transition: all 0.3s ease-in-out;
  padding: 0;
  border: none;
  outline: none;
  &:hover, &:focus {
    outline: none;
    background: transparent;
    color: transparent;
    &:before {
      opacity: $slick-opacity-on-hover;
    }
  }
  &.slick-disabled:before {
    opacity: $slick-opacity-not-active;
  }
}

.slick-prev svg,
.slick-next svg {
  width: $slick-prevnext-font-size;
  height: $slick-prevnext-font-size;
  fill: $slick-arrow-color;
  opacity: $slick-opacity-default;
  -webkit-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.5));
  -moz-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.5));
  -o-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.5));
  -ms-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.5));
  filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.5));
}

.slick-prev {
  left: -0px;
  [dir="rtl"] & {
    left: auto;
    right: -0px;
  }
  &:before {
    content: $slick-prev-character;
    [dir="rtl"] & {
      content: $slick-next-character;
    }
  }
}

.slick-next {
  right: -0px;
  [dir="rtl"] & {
    left: -0px;
    right: auto;
  }
  &:before {
    content: $slick-next-character;
    [dir="rtl"] & {
      content: $slick-prev-character;
    }
  }
}

@media (min-width: 1000px) {
  .slick-prev {
    opacity: 0;
    margin-left: -$slick-prevnext-font-size;
  }
  .slick-next {
    opacity: 0;
    margin-right: -$slick-prevnext-font-size;
  }
  .slick-slider:hover {
    .slick-prev {
      opacity: 1;
      margin-left: 0;
    }
    .slick-next {
      opacity: 1;
      margin-right: 0;
    }
  }
}

.slick-slider--indented-side-icons {
  .slick-list {
    margin-left: 20px;
    margin-right: 20px;
    transition: all 350ms ease-out;
  }

  &.slick-slider--all-visible {
    .slick-list {
      margin-left: 0;
      margin-right: 0;
    }

    .slick-prev,
    .slick-next {
      opacity: 0!important;
      pointer-events: none;
    }
  }

  .slick-prev,
  .slick-next {
    background: transparent;
    opacity: 1;

    &.slick-disabled {
      opacity: 0.25;
    }

    &, svg {
      width: 30px;
      height: 30px;
    }

    svg {
      fill: $body-text-col;
      -webkit-filter: none;
      -moz-filter: none;
      -o-filter: none;
      -ms-filter: none;
      filter: none;
    }
  }

  .slick-prev,
  &:hover .slick-prev {
    margin-left: -10px;
  }

  .slick-next,
  &:hover .slick-next {
    margin-right: -10px;
  }
}

/* Slider Dots */

.slick-dots {
  list-style: none;
  text-align: center;
  margin: 10px 0;
  padding: 0;
  width: 100%;
  li {
    position: relative;
    display: inline-block;
    height: 20px;
    width: 20px;
    margin: 0 2px;
    padding: 0;
    cursor: pointer;
    button {
      border: 0;
      background: transparent;
      display: block;
      height: 20px;
      width: 20px;
      outline: none;
      line-height: 0px;
      font-size: 0px;
      color: transparent;
      padding: 5px;
      cursor: pointer;
      &:hover, &:focus {
        outline: none;
        &:before {
          opacity: $slick-opacity-on-hover;
        }
      }
      &:before {
        position: absolute;
        top: 0;
        left: 0;
        content: $slick-dot-character;
        width: 20px;
        height: 20px;
        font-family: Arial, sans-serif;
        font-size: $slick-dot-size;
        line-height: 20px;
        text-align: center;
        color: $slick-dot-color;
        opacity: $slick-opacity-not-active;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    }
    &.slick-active button:before {
      color: $slick-dot-color-active;
      opacity: $slick-opacity-default;
    }
  }
}



