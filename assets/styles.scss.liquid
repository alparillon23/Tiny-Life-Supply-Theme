  .password-main,
  .password-footer {
    display: table-row;
  }
  .password-store-name-inner,
  .password-main-inner,
  .password-footer-inner {
    display: table-cell;
    padding: 20px;
  }

  .password-store-name { height: 1px; }
  .password-main { height: 100%; }
  .password-main-inner { vertical-align: middle; }
  .password-footer { height: 1px; }

  .password-login-link {
    margin: 20px 0 40px;
    text-align: right;
    svg {
      width: 10px;
      height: 12px;
      margin-right: 4px;
      path {
        @include vendor-prefix(transition, fill 120ms);
      }
    }
    a:hover svg path,
    a:focus svg path {
      fill: $feature-col;
    }
  }

  h1 {
    font-size: 2em;
    a:hover {
      text-decoration: none;
    }
  }

  h2 {
    font-size: 4em;
  }

