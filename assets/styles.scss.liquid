button,
input[type=submit],
.btn,
.button {
  -webkit-appearance: none;
  display: inline-block;
  background: $button-bg-col;
  color: $button-text-col;
  border: 2px solid $button-bg-col;
  height: auto;
  width: auto;
  padding: $button-padding;
  font-family: inherit;
  font-size: $button-font-size;
  vertical-align: middle;
  line-height: 1.2em;

  {% if settings.btn_shape == 'lozenge' %}
  @include vendor-prefix(border-radius, 60px);
  {% endif %}
  @include vendor-prefix(transition, opacity 200ms, background-color 150ms, border-color 150ms);

  &.plain-text {
    font-family: $body-font-family;
    font-weight: $body-font-weight;
    font-style: $body-font-style;
    font-size: $body-font-size;
    line-height: 1.1em;
    text-transform: none;
    padding: 0;
    color: inherit;
    background: transparent;
    border: none;
    vertical-align: baseline;
    &:hover {
      background: transparent;
      color: inherit;
    }
  }

  &.alt {
    color: $button-bg-col;
    background: #F1CE73;
    border: none;

    &:hover {
      background: darken(#F1CE73, 10%);
      color: $button-bg-col;
    }

    svg {
      display: block;
      fill: $button-bg-col;
    }
  }

  &:hover,
  &:focus {
    border-color: $button-hover-bg-col;
    background: $button-hover-bg-col;
    color: $button-text-col;
  }

  a, a:hover {
    color: $button-text-col;
  }

  $_button-icon-size-large: 24px;
  .icon {
    svg {
      vertical-align: top;
      fill: $button-text-col;
    }

    &.icon--large {
      display: inline-block;
      margin-bottom: - ($_button-icon-size-large - $icon-size);
      svg {
        position: relative;
        width: $_button-icon-size-large;
        height: $_button-icon-size-large;
        top: -($_button-icon-size-large - $icon-size) / 2;
      }
    }
  }
}

