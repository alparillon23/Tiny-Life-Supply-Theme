.main-nav {
  position: relative;
  font-family: $nav-font-family;
  font-weight: $nav-font-weight;
  font-style: $nav-font-style;
  font-size: $nav-font-size;
  margin-top: -15px;
  padding-top: 0;
  ul, li { margin: 0; padding: 0; list-style: none; display: inline;}
  .nav-item {
    display: inline-block;
    .nav-item-link {
      display: inline-block;
      padding: 0.5em 1em 0.9em;
      line-height: 1.1em;
      color: $nav-main-col;
      position: relative;
      &:focus {
        color: $nav-main-hover-col;
      }
      svg {
        fill: currentColor;
        position: absolute;
        right: -2px;
        top: 1.11em;
        margin-top: -8px;
      }
    }
    &:hover > .nav-item-link {
      color: $nav-main-hover-col;
    }
  }
  .no-js & .nav-item.dropdown:hover > .sub-nav,
  .nav-item.dropdown.open > .sub-nav {
    display: flex;
  }

  .sub-nav {
    display: none;
    position: absolute;
    z-index: 5;
    left: 0;
    top: 100%;
    background: $nav-dropdown-bg;
    text-align: left;
    font-size: $sub-nav-font-size;
