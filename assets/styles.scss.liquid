.grid {
  .column {
    margin-bottom: $grid-gutter * 1.5;
  }
  .column.half:nth-child(2n+1),
  .column.flex.max-cols-2:nth-child(2n+1) {
    clear: left;
  }
  .column.third:nth-child(3n+1),
  .column.flex.max-cols-3:nth-child(3n+1) {
    clear: left;
  }
  .column.quarter:nth-child(4n+1),
  .column.flex.max-cols-4:nth-child(4n+1) {
    clear: left;
  }
  .column.fifth:nth-child(5n+1) {
    clear: left;
  }
  .column.flex.max-cols-6:nth-child(6n+1) {
    clear: left;
  }
}

.row.one-row .column {
  margin-bottom: 0;
}

.row--simple-valign {
  display: flex;
  align-items: center;
}

.mobile, .mobile-inline {
  display: none;
}

@media (max-width: 1250px) {
  .column.flex.max-cols-6 {
    width: 25%;
    .grid &:nth-child(6n+1) { clear: none; }
    .grid &:nth-child(4n+1) { clear: left; }
  }
  .row.one-row .column.flex.max-cols-6:nth-child(n+5) {
    display: none;
  }
}

@media (max-width: 960px) {
  .column.flex.max-cols-4 {
    width: 33.33333%;
    .grid &:nth-child(4n+1) { clear: none; }
    .grid &:nth-child(3n+1) { clear: left; }
  }
  .column.flex.max-cols-3,
  .column.flex.max-cols-2 {
    width: 50%;
    .grid &:nth-child(3n+1) { clear: none; }
    .grid &:nth-child(2n+1) { clear: left; }
  }
  .row.one-row .column.flex.max-cols-3:nth-child(n+3),
  .row.one-row .column.flex.max-cols-4:nth-child(n+4) {
    display: none;
  }
}

@media (max-width: 767px) {
  .mobile {
    display: block;
  }
  .mobile-inline {
    display: inline;
  }
  .container {
    width: auto;
  }
  .column {
    margin-bottom: 20px;
    &.no-mobile-margin {
      margin-bottom: 0;
    }
  }
  .column.half,
  .column.third,
  .column.two-thirds,
  .column.quarter,
  .column.fifth,
  .column.four-fifths,
  .column.flex.max-cols-2 {
    width: 100%;
    .grid &:nth-child(2n+1) {
      clear: none;
    }
  }
  .column.flex.min-cols-2,
  .column.flex.max-cols-4,
  .column.flex.max-cols-6 {
    width: 50%;
    .grid &:nth-child(3n+1),
    .grid &:nth-child(4n+1) { clear: none; }
    .grid &:nth-child(2n+1) { clear: left; }
  }
  .row.one-row .column.flex.max-cols-4:nth-child(n+3),
  .row.one-row .column.flex.max-cols-6:nth-child(n+3) {
    display: none;
  }
  .column.three-quarters {
    width: 100%;
  }

  .row--simple-valign {
    display: block;
    align-items: flex-start;
  }

  .row--simple-mobile-reverse {
    display: flex;
    flex-wrap: wrap;

    > .column:first-child {
      order: 2;
    }

    > .column:nth-child(2) {
      order: 1;
    }
  }
}
@media screen and (max-width: 479px) {
  .column.quarter, .column.fifth, .column.flex.max-cols-6, .column.flex.max-cols-4, .column.flex.max-cols-3 {
    float: none;
    width: 100%;
  }
  .column.min-cols-2,
  .column.flex.min-cols-2 {
    float: left;
    width: 50%;
    .grid &:nth-child(2n+1) {
      clear: left;
    }
  }

  .links-row {
    .back-link {
      display: block;
      margin: 0 0 1em;
    }
  }
  .ft.ft-nm {
    &, & .ftr, & .ftr .ftc {
      display: block;
    }
  }
}

